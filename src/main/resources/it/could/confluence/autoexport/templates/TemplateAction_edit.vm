<html>
  <head>
    <title>$action.getText("autoexport") $action.getText("title")</title>
  </head>
  <body>
    #parse ("/template/includes/actionerrors.vm")
    #parse ("/it/could/confluence/autoexport/templates/messages.vm")
    #if ($actionMessages.size() > 0)
      <div align="center"><a href="$action.getText('uri.config')">$action.getText('act.back')</a></div>
    #else
      <form action="$action.getText('uri.template-save')" method="post" name="edittemplateform">
        <table class="grid" width="100%">
          <thead>          
            <tr>
              <th style="$action.getText('style.title')">
                #if ($action.getSpace() == '')
                  $action.getText('lbl.allspaces')
                #else
                  $action.getText('lbl.namedspace',[$action.getSpaceName()])
                #end
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <textarea name="data" style="$action.getText('style.textarea')" rows="30" cols="80">$action.getData()</textarea>
              </td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <th style="$action.getText('style.buttons')">
                <input type="hidden" name="space" value="$action.getSpace()">
                <input type="button" name="back" value="$action.getText('act.back')" onclick="location='$action.getText('uri.config')'">
                <input type="reset"  name="reset" value="$action.getText('act.reset')">
                <input type="submit" name="save" value="$action.getText('act.save')">
              </td>
            </tr>
          </tfoot>
        </table>
      </form>
    #end
    #parse ("/it/could/confluence/autoexport/templates/breadcrumbs.vm")
  </body>
</html>
